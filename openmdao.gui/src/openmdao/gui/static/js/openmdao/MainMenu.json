[
    { "text": "Project", "id": "project-menu",
      "items": [
        { "text": "Save",          "id": "project-save",    "onclick": "openmdao.model.saveProject();" },
        { "text": "Run",           "id": "project-run",     "onclick": "openmdao.model.runModel();" },
        { "text": "Reload",        "id": "project-reload",  "onclick": "openmdao.model.reload();" },
        { "text": "Close",         "id": "project-close",   "onclick": "openmdao.model.close();" },
        { "text": "Exit",          "id": "project-exit",    "onclick": "openmdao.model.exit();" }
      ]
    },
    { "text": "View", "id": "view-menu",
      "items": [
        { "text": "Components",    "id": "view-components", "onclick": "layout.open('west'); jQuery('#otree_tab a').click();" },
        { "text": "Console",       "id": "view-console",    "onclick": "layout.open('south');" },
        { "text": "Dataflow",      "id": "view-dataflow",   "onclick": "jQuery('#dataflow_tab a').click();" },
        { "text": "Files",         "id": "view-files",      "onclick": "layout.open('west'); jQuery('#ftree_tab a').click();" },
        { "text": "Library",       "id": "view-library",    "onclick": "layout.open('east'); jQuery('#library_tab a').click();" },
        { "text": "Properties",    "id": "view-properties", "onclick": "layout.open('east'); jQuery('#properties_tab a').click();" },
        { "text": "Workflow",      "id": "view-workflow",   "onclick": "jQuery('#workflow_tab a').click();" },
        { "text": "--------"       },
        { "text": "Refresh",       "id": "view-refresh",    "onclick": "openmdao.update();" }
      ]
    },
    { "text": "Tools", "id": "tools-menu",
      "items": [
        { "text": "Code Editor",   "id": "tools-editor",    "onclick": "openmdao.Util.popupWindow('editor', 'Code Editor')"},
        { "text": "Plot Variable", "id": "tools-plotter",   "onclick": "openmdao.PlotFrame.prototype.chooseVariable();"},
        { "text": "Show Drawing",  "id": "tools-drawing",   "onclick": "openmdao.DrawingFrame.prototype.chooseVariable();"}
      ]
    },
    { "text": "Help", "id": "help-menu",
      "items": [
        { "text": "User Guide",    "id": "help-doc",        "onclick": "openmdao.Util.popupWindow('/docs/');"}
      ]
    },
    { "text": "About",             "id": "about-item",      "onclick": "openmdao.Util.popupWindow('http://openmdao.org/','');"}
]
